<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    app:elevation="2dp"
    app:cardPreventCornerOverlap="false"
    android:layout_marginBottom="@dimen/card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--suppress AndroidLintContentDescription -->
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingTop="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="@dimen/card_padding_medium"
            tools:text="Titulo do filme AQUI!!!!!!!"
            android:ellipsize="end"
            android:maxLines="4"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:id="@+id/movie_director"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="4dp"
            tools:text="diretor do filme aqui"
            android:maxLines="1"
            android:fontFamily="@font/montserrat_regular"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/movie_year"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="@dimen/card_padding_large"
            tools:text="Data de lanÃ§amento aqui!"
            android:maxLines="1"
            android:fontFamily="@font/montserrat_regular"
            android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
